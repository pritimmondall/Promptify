{
  "manifest_version": 3,
  "name": "Prompt Privacy Guard",
  "version": "1.0",
  "description": "Protects Indian PII (Aadhaar, PAN, UPI) from leaking to AI chatbots.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://gemini.google.com/*"],
      "js": ["content.js"]
    }
  ]
}